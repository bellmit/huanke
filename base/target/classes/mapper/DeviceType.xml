<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.impl.device.DeviceTypeMapper">

    <sql id="tableName">
        t_device_type
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.device.DeviceTypePo">
        INSERT INTO <include refid="tableName"/>
        (
        name,
        icon,
        funcList,
        sensorList,
        createTime
        )
        VALUES (
        #{name},
        #{icon},
        #{funcList},
        #{sensorList},
        #{createTime}
        )
    </insert>
    <update id="updateById" parameterType="com.huanke.iot.base.po.device.DeviceTypePo">
        update <include refid="tableName"/>
        <set>
            <if test = "name != null and name != ''">
                name = #{name},
            </if>
            <if test = "icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test = "sensorList != null and sensorList != ''">
                sensorList = #{sensorList},
            </if>
            <if test = "funcList != null and funcList != ''">
                funcList = #{funcList},
            </if>

            lastUpdatetime = #{lastUpdatetime}
        </set>
        where id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.DeviceTypePo">
        select
        *
        FROM <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id = "selectCount" resultType="java.lang.Integer">
        select count(1)
        from <include refid="tableName"/>
        <where>
            <if test = "param.name != null and param.name != ''">
                and name = #{param.name}
            </if>
        </where>
    </select>


    <select id="selectList" resultType="com.huanke.iot.base.po.device.DeviceTypePo">
        select * from <include refid="tableName"/>
        <where>

            <if test = "param.name != null and param.name != ''">
                and name = #{param.name}
            </if>
        </where>
        limit #{limit} offset #{offset}
    </select>

</mapper>