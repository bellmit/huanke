<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.DictMapper">

    <sql id="tableName">
        t_dict
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.config.DictPo">
        INSERT INTO
        <include refid="tableName"/>
        (
        value,
        label,
        type,
        description,
        sort,
        remarks,
        operationUserId,
        createTime,
        isDelete
        )
        VALUES
        (
        #{value},
        #{label},
        #{type},
        #{description},
        #{sort},
        #{remarks},
        #{operationUserId},
        #{createTime},
        #{isDelete}
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.config.DictPo">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.config.DictPo">
        select * from
        <include refid="tableName"/>
        <where>
            1=1

        </where>
        limit #{offset},#{limit}
    </select>


    <update id="updateById" parameterType="com.huanke.iot.base.po.config.DictPo">
        update
        <include refid="tableName"/>
        <set>
            <if test="value != null">
                value = #{value},
            </if>
            <if test="label != null and label!='' ">
                label = #{label},
            </if>
            <if test="type != null and type!='' ">
                type = #{type},
            </if>
            <if test="description != null and description!='' ">
                description = #{description},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="remarks != null and remarks != ''">
                remarks = #{remarks},
            </if>
            <if test="operationUserId != null">
                operationUserId = #{operationUserId},
            </if>
            <if test="isDelete != null">
                isDelete = #{isDelete}
            </if>
        </set>
        where
        1= 1
        and id = #{id}
    </update>

    <select id="selectAll" resultType="com.huanke.iot.base.po.device.DevicePo">
        select * from
        <include refid="tableName"/>
    </select>

    <update id="deleteById" parameterType="java.lang.Integer">
        update
        <include refid="tableName"/>
        <set>
            isDelete = 1
        </set>
        WHERE id  = #{id}
    </update>


    <select id="selectByType" parameterType="java.lang.String" resultType="com.huanke.iot.base.po.device.DevicePo">
        select * from
        <include refid="tableName"/>
        where type = #{type}
        AND  isDelete = 0
    </select>
</mapper>