<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.project.RuleMapper">

    <sql id="tableName">
        t_project_rule
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.project.ProjectRule">
        INSERT INTO
        <include refid="tableName"/>
        (
        customerId,
        name,
        description,
        typeId,
        warnLevel,
        status,
        createTime,
        createUser
        )
        VALUES
        (
        #{customerId},
        #{name},
        #{description},
        #{typeId},
        #{warnLevel},
        #{status},
        #{createTime},
        #{createUser}
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.project.ProjectRule">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.project.ProjectRule">
        select * from
        <include refid="tableName"/>
        <where>
            1=1
        </where>
        limit #{offset},#{limit}
    </select>


    <update id="updateById" parameterType="com.huanke.iot.base.po.project.ProjectRule">
        update
        <include refid="tableName"/>
        <set>
            <if test="name != null and name!='' ">
                name = #{name},
            </if>
            <if test="description != null and description!='' ">
                description = #{description},
            </if>
            <if test="typeId != null">
                typeId = #{typeId},
            </if>
            <if test="warnLevel != null">
                warnLevel = #{warnLevel},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateTime != null">
                updateTime = #{updateTime},
            </if>
            <if test="updateUser != null">
                updateUser = #{updateUser},
            </if>
        </set>
        where
        1= 1
        and id = #{id}
    </update>


    <update id="deleteById" parameterType="java.lang.Integer">
        update
        <include refid="tableName"/>
        <set>
            isDelete = 1
        </set>
        WHERE id  = #{id}
    </update>

    <update id="batchReverse">
        UPDATE <include refid="tableName"/>
        SET status = 1
        ,updateUser = #{userId}
        WHERE id IN
        <foreach item="ids" collection="valueList" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </update>

    <update id="batchDelete">
        UPDATE <include refid="tableName"/>
        SET status = 2
        ,updateUser = #{userId}
        WHERE id IN
        <foreach item="ids" collection="valueList" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </update>

    <update id="batchForbidden">
        UPDATE <include refid="tableName"/>
        SET status = 3
        ,updateUser = #{userId}
        WHERE id IN
        <foreach item="ids" collection="valueList" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </update>

    <!--列表总条数-->
    <select id="selectCount"  resultType="java.lang.Integer">
        select count(1) from
        <include refid="tableName"/>
        where 1=1
        <if test="param.name != null and param.name!='' ">
            AND name like CONCAT('%',CONCAT(#{param.name},'%'))
        </if>
        <if test="param.status != null">
            AND status = #{param.status}
        </if>
        <if test="param.warnLevel != null">
            AND warnLevel = #{param.warnLevel}
        </if>
        AND customerId = #{param.customerId}
        AND status != 2
    </select>

    <!--返回当前列表集合-->
    <select id="selectPageList" resultType="com.huanke.iot.base.resp.project.RuleRspPo">
      SELECT pr.id, pr.name, pr.description, pr.warnLevel, pr.createTime, pr.updateTime, pr.typeId, pr.status, u.nickName createName,u1.nickName updateName
      FROM t_project_rule pr left join t_user u on pr.createUser = u.id left join t_user u1 on  pr.updateUser = u1.id
      WHERE 1=1
        <if test="projectRule.name != null and projectRule.name!='' ">
            AND name like CONCAT('%',CONCAT(#{projectRule.name},'%'))
        </if>
        <if test="projectRule.status != null">
            AND status = #{projectRule.status}
        </if>
        <if test="projectRule.warnLevel != null">
            AND warnLevel = #{projectRule.warnLevel}
        </if>
        AND customerId = #{projectRule.customerId}
        AND status != 2
      LIMIT #{start},#{limit}
    </select>
</mapper>