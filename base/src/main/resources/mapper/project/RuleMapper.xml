<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.project.RuleMapper">

    <sql id="tableName">
        t_project_rule
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.project.ProjectRule">
        INSERT INTO
        <include refid="tableName"/>
        (
        customerId,
        name,
        description,
        typeId,
        warnLevel,
        status,
        createTime,
        createUser
        )
        VALUES
        (
        #{customerId},
        #{name},
        #{description},
        #{typeId},
        #{warnLevel},
        #{status},
        #{remarks},
        #{createTime},
        #{createUser}
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.project.ProjectRule">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.project.ProjectRule">
        select * from
        <include refid="tableName"/>
        <where>
            1=1
        </where>
        limit #{offset},#{limit}
    </select>


    <update id="updateById" parameterType="com.huanke.iot.base.po.project.ProjectRule">
        update
        <include refid="tableName"/>
        <set>
            <if test="name != null and name!='' ">
                name = #{name},
            </if>
            <if test="description != null and description!='' ">
                description = #{description},
            </if>
            <if test="typeId != null">
                typeId = #{typeId},
            </if>
            <if test="warnLevel != null">
                warnLevel = #{warnLevel},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateTime != null">
                updateTime = #{updateTime},
            </if>
            <if test="updateUser != null">
                updateUser = #{updateUser},
            </if>
        </set>
        where
        1= 1
        and id = #{id}
    </update>


    <update id="deleteById" parameterType="java.lang.Integer">
        update
        <include refid="tableName"/>
        <set>
            isDelete = 1
        </set>
        WHERE id  = #{id}
    </update>


    <select id="selectByType" parameterType="java.lang.String" resultType="com.huanke.iot.base.po.config.DictPo">
        select * from
        <include refid="tableName"/>
        where type = #{type}
        AND  isDelete = 0
    </select>

    <update id="batchDelete">
        UPDATE <include refid="tableName"/>
        SET isDelete = 1
        ,updateUserId = #{userId}
        WHERE id IN
        <foreach item="ids" collection="valueList" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </update>

    <select id="selectCount"  resultType="java.lang.Integer">
        select count(1) from
        <include refid="tableName"/>
        where 1=1
        <if test="param.type != null and param.type!='' ">
            AND type = #{param.type}
        </if>
        AND customerId = #{param.customerId}
    </select>

    <select id="selectPageList" resultType="com.huanke.iot.base.resp.DictRspPo">
      SELECT d.id, d.label, d.description, d.createTime, d.updateTime, u.nickName createName,u1.nickName updateName
      FROM t_dict d left join t_user u on d.createUserId = u.id left join t_user u1 on  d.updateUserId = u1.id
      WHERE 1=1
        <if test = "dictPo.type != null and dictPo.type != ''">
            AND d.type = #{dictPo.type}
        </if>
        AND customerId = #{dictPo.customerId}
      LIMIT #{start},#{limit}
    </select>
</mapper>