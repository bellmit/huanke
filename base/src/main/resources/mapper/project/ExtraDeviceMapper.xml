<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.project.ExtraDeviceMapper">

    <sql id="tableName">
        t_project_plan_info
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.project.ProjectExtraDevice">
        INSERT INTO
        <include refid="tableName"/>
        (
        deviceNo,
        projectId,
        name,
        model,
        factory,
        direction,
        status,
        createTime,
        createUser
        )
        VALUES
        (
        #{deviceNo},
        #{projectId},
        #{name},
        #{model},
        #{factory},
        #{direction},
        #{status},
        #{createTime},
        #{createUser}
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.project.ProjectExtraDevice">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.project.ProjectExtraDevice">
        select * from
        <include refid="tableName"/>
        <where>
            1=1
        </where>
        limit #{offset},#{limit}
    </select>


    <update id="updateById" parameterType="com.huanke.iot.base.po.project.ProjectExtraDevice">
        update
        <include refid="tableName"/>
        <set>
            <if test="name != null and name!='' ">
                name = #{name},
            </if>
            <if test="model != null and model!='' ">
                model = #{model},
            </if>
            <if test="factory != null and factory!='' ">
                factory = #{factory},
            </if>
            <if test="direction != null and direction!='' ">
                direction = #{direction},
            </if>
            <if test="description != null and description!='' ">
                description = #{description},
            </if>
            <if test="isRule != null">
                isRule = #{isRule},
            </if>
            <if test="ruleId != null">
                ruleId = #{ruleId},
            </if>
            <if test="linkType != null">
                linkType = #{linkType},
            </if>
            <if test="linkDeviceId != null">
                linkDeviceId = #{linkDeviceId},
            </if>
            <if test="linkProjectId != null">
                linkProjectId = #{linkProjectId},
            </if>
            <if test="updateTime != null">
                updateTime = #{updateTime},
            </if>
            <if test="updateUser != null">
                updateUser = #{updateUser},
            </if>
        </set>
        where
        1= 1
        and id = #{id}
    </update>


    <update id="deleteById" parameterType="java.lang.Integer">
        update
        <include refid="tableName"/>
        <set>
            isDelete = 1
        </set>
        WHERE id  = #{id}
    </update>

    <update id="batchDelete">
        UPDATE <include refid="tableName"/>
        SET status = 2
        ,updateUser = #{userId}
        WHERE id IN
        <foreach item="ids" collection="valueList" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </update>
    
</mapper>