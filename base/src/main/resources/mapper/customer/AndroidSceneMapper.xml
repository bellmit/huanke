<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.customer.AndroidSceneMapper">

    <sql id="tableName">
        android_scene
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.customer.AndroidScenePo">
        INSERT INTO <include refid="tableName"/>
        (
        configId,
        customerId,
        name,
        imgsCover,
        description,
        createTime
        )
        VALUES (
        #{configId},
        #{customerId},
        #{name},
        #{imgsCover},
        #{description},
        #{createTime}
        )
    </insert>

    <update id="updateById" parameterType="com.huanke.iot.base.po.customer.AndroidScenePo">
        update
        <include refid="tableName"/>
        <set>

            <if test="name != null  and name != ''">
                name = #{name},
            </if>
            <if test="imgsCover != null  and imgsCover != '' ">
                imgsCover = #{imgsCover},
            </if>
            <if test="description != null  and description != '' ">
                description = #{description},
            </if>
            lastUpdateTime = #{lastUpdateTime}
        </set>
        where
        id = #{id}
    </update>

    <!-- 批量插入 -->
    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO <include refid="tableName"/>
        (
        configId,
        customerId,
        name,
        imgsCover,
        description,
        createTime,
        lastUpdateTime
        )
        VALUES
        <foreach collection ="list" item="reddemCode" index= "index" separator =",">
            (
            #{configId},
            #{customerId},
            #{name},
            #{imgsCover},
            #{description},
            #{createTime},
            #{lastUpdateTime}
            )
        </foreach>
    </insert>

    <delete id="deleteById">
        delete from <include refid="tableName"/>
        where id = #{id}
    </delete>

    <select id="selectByConfigId"  resultType="com.huanke.iot.base.po.customer.AndroidScenePo">
        select
        *
        FROM <include refid="tableName"/>
        WHERE configId = #{configId}
            AND status = 1
    </select>

</mapper>