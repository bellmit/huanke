<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.customer.CustomerUserMapper">

    <sql id="tableName">
        t_customer
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" parameterType="com.huanke.iot.base.po.customer.CustomeUserPo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO <include refid="tableName"/>
        (
        openId,
        nickname,
        unionid,
        headimgurl,
        sex,
        province,
        city,
        createTime,
        mac
        )
        VALUES (
        #{openId},
        #{nickname},
        #{unionid},
        #{sex},
        #{headimgurl},
        #{province},
        #{city},
        #{createTime},
        #{mac}
        )
    </insert>

    <update id = "updateById" parameterType="com.huanke.iot.base.po.customer.CustomerUserPo">
        update <include refid="tableName"/>
        <set>
            <if test = "openId != null and openId != ''">
                name = #{openId},
            </if>
            <if test = "nickname != null and nickname != ''" >
                nickname = #{nickname},
            </if>
            <if test = "unionid != null and unionid != '' ">
                unionid = #{unionid},
            </if>
            <if test = "headimgurl != null and headimgurl != ''">
                headimgurl = #{headimgurl},
            </if>
            <if test = "sex != null ">
                sex = #{sex},
            </if>
            <if test = "province != null and province != ''">
                province = #{province},
            </if>
            <if test = "city != null and city != ''">
                city = #{city},
            </if>
            lastUpdateTime = #{lastUpdateTime}
        </set>
        where id = #{id}
    </update>

    <!-- 根据信息筛选返回数据 -->
    <select id="selectByOpenId" parameterType="java.lang.String" resultType="com.huanke.iot.base.po.customer.CustomerUserPo">
        SELECT
        *
        FROM <include refid="tableName"/>
        WHERE openId = #{openId}
        limit 1
    </select>

    <update id = "updatevisitTimeByOpenId" parameterType="com.huanke.iot.base.po.customer.CustomerUserPo">
        update <include refid="tableName"/> set
        lastVisitTime = #{lastVisitTime}
        where openId = #{openId}
    </update>


    <select id="selectCount" parameterType="com.huanke.iot.base.po.customer.CustomerUserPo" resultType="java.lang.Integer">
        select count(1) from <include refid="tableName"/>
    </select>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.customer.CustomerUserPo">
        select
        *
        FROM <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>
</mapper>