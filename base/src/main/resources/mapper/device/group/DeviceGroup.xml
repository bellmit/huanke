<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.DeviceGroupMapper">

    <sql id="tableName">
        t_device_group
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.huanke.iot.base.po.device.group.DeviceGroupPo">
        INSERT INTO
        <include refid="tableName"/>
        (
        name,
        customerId,
        masterUserId,
        manageUserIds,
        status,
        createTime,
        lastUpdateTime
        )
        VALUES (
        #{name},
        #{customerId},
        #{masterUserId},
        #{manageUserIds},
        #{status},
        #{createTime},
        #{lastUpdateTime}
        )
    </insert>

    <select id="selectCount" resultType="java.lang.Integer">
        select count(1)
        from
        <include refid="tableName"/>
        <where>
            <if test="param.customerId != null and param.customerId != 0">
                AND userId = #{param.userId}
            </if>
            <if test="param.status != null">
                AND status = #{param.status}
            </if>
            <if test="param.name != null">
                and groupName = #{param.name}
            </if>
        </where>
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.device.group.DeviceGroupPo">
        select * from
        <include refid="tableName"/>
        <where>
            <if test = "param.userId != null and param.userId != 0">
                AND userId = #{param.customerId}
            </if>
            <if test="param.status != null">
                AND status = #{param.status}
            </if>
            <if test = "param.groupName != null">
                and groupName = #{param.name}
            </if>
        </where>
        limit #{limit} offset #{offset}
    </select>

    <update id="updateById" parameterType="com.huanke.iot.base.po.device.group.DeviceGroupPo">
        update
        <include refid="tableName"/>
        <set>
            <if test="name != null">
                groupName = #{name},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            lastUpdateTime = #{lastUpdateTime}
            where id = #{id}
        </set>
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.group.DeviceGroupPo">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>
    <select id="queryGroupCount" resultType="java.lang.Integer">
        select count(1) FROM
        <include refid="tableName"/>
        where customerId = #{customerId}
        and name = #{name}
    </select>

    <update id="updateGroupStatus">
        update
        <include refid="tableName"/>
        set status = #{status} where customerId = #{customerId}
        and id = #{id}
    </update>
    <select id="queryByName" resultType="com.huanke.iot.base.po.device.group.DeviceGroupPo">
        select * from  <include refid="tableName"/>
        where name = #{name} and customerId = #{customerId}
    </select>

</mapper>