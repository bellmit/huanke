<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.DeviceGroupMapper">

    <sql id="tableName">
        t_device_group
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.huanke.iot.base.po.device.DeviceGroupItemPo">
        INSERT INTO
        <include refid="tableName"/>
        (
        deviceId,
        groupId,
        status,
        createTime,
        lastUpdateTime
        )
        VALUES (
        #{deviceId},
        #{groupId},
        #{status},
        #{createTime},
        #{lastUpdateTime}
        )
    </insert>

    <select id="selectByDeviceId" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.DeviceGroupItemPo">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE deviceId = #{deviceId}
    </select>
</mapper>