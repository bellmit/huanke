<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.DeviceTypeMapper">

    <sql id="tableName">
        t_device_type
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.device.typeModel.DeviceTypePo">
        INSERT INTO <include refid="tableName"/>
        (
        name,
        icon,
        typeNo,
        remark,
        createTime
        )
        VALUES (
        #{name},
        #{icon},
        #{typeNo},
        #{remark},
        #{createTime}
        )
    </insert>
    <update id="updateById" parameterType="com.huanke.iot.base.po.device.typeModel.DeviceTypePo">
        update <include refid="tableName"/>
        <set>
            <if test = "name != null and name != ''">
                name = #{name},
            </if>
            <if test = "icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test = "typeNo != null and typeNo != ''">
                typeNo = #{typeNo},
            </if>
            <if test = "remark != null and remark != ''">
                remark = #{remark},
            </if>
            lastUpdatetime = #{lastUpdatetime}
        </set>
        where id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.typeModel.DeviceTypePo">
        select
        *
        FROM <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id = "selectCount" resultType="java.lang.Integer">
        select count(1)
        from <include refid="tableName"/>
        <where>
            <if test = "param.name != null and param.name != ''">
                AND name like CONCAT('%',CONCAT(#{param.name},'%'))
            </if>
            <if test = "param.typeNo != null and param.typeNo != ''">
                and name = #{param.typeNo}
            </if>
        </where>
    </select>


    <select id="selectList" resultType="com.huanke.iot.base.po.device.typeModel.DeviceTypePo">
        select * from <include refid="tableName"/>
        <where>

            <if test = "param.name != null and param.name != ''">
                AND name like CONCAT('%',CONCAT(#{param.name},'%'))
            </if>
            <if test = "param.typeNo != null and param.typeNo != ''">
                and name = #{param.typeNo}
            </if>
        </where>
        limit #{limit} offset #{offset}
    </select>

</mapper>