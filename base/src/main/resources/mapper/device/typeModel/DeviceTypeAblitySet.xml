<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.typeModel.DeviceTypeAblitySetMapper">

    <sql id="tableName">
        t_device_type_ablity_set
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.device.typeModel.DeviceTypeAblitySetPo">
        INSERT INTO <include refid="tableName"/>
        (
        typeId,
        ablitySetId
        createTime
        )
        VALUES (
        #{typeId},
        #{ablitySetId},
        #{createTime}
        )
    </insert>
    <update id="updateById" parameterType="com.huanke.iot.base.po.device.typeModel.DeviceTypeAblitySetPo">
        update <include refid="tableName"/>
        <set>
            <if test = "typeId != null ">
                typeId = #{typeId},
            </if>
            <if test = "ablitySetId != null ">
                ablitySetId = #{ablitySetId},
            </if>
            lastUpdateTime = #{lastUpdateTime}
        </set>
        where id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.typeModel.DeviceTypeAblitySetPo">
        select
        *
        FROM <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id = "selectCount" resultType="java.lang.Integer">
        select count(1)
        from <include refid="tableName"/>
        <where>
            <if test = "param.typeId != null">
                and typeId = #{param.typeId}
            </if>
            <if test = "param.ablitySetId != null and param.ablitySetId != ''">
                and ablitySetId = #{param.ablitySetId}
            </if>
        </where>
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.device.typeModel.DeviceTypeAblitySetPo">
        select * from <include refid="tableName"/>
        <where>
            <if test = "param.typeId != null">
                and typeId = #{param.typeId}
            </if>
            <if test = "param.ablitySetId != null and param.ablitySetId != ''">
                and ablitySetId = #{param.ablitySetId}
            </if>
        </where>
        limit #{limit} offset #{offset}
    </select>

</mapper>