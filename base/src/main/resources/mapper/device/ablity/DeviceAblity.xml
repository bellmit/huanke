<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.ablity.DeviceAblityMapper">

    <sql id="tableName">
        t_device_ablity
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.device.alibity.DeviceAblityPo">
        INSERT INTO <include refid="tableName"/>
        (
        ablityName,
        dirValue,
        writeStatus,
        remark,
        createTime
        )
        VALUES (
        #{ablityName},
        #{dirValue},
        #{writeStatus},
        #{remark},
        #{createTime}
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.alibity.DeviceAblityPo">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.device.alibity.DeviceAblityPo">
        select * from
        <include refid="tableName"/>
        <where>
            1 = 1
            <if test="param.ablityName != null and param.ablityName != ''">
                AND ablityName like CONCAT('%',CONCAT(#{param.ablityName},'%'))
            </if>
            <if test="param.dirValue != null and param.dirValue != ''">
                AND dirValue = #{param.dirValue}
            </if>
            <if test="param.writeStatus != null">
                AND writeStatus = #{param.writeStatus}
            </if>
        </where>
        limit #{offset},#{limit}
    </select>

    <update id="updateById" parameterType="com.huanke.iot.base.po.device.alibity.DeviceAblityPo">
        update
        <include refid="tableName"/>
        <set>
            <if test="ablityName != null and ablityName != ''">
                ablityName = #{ablityName},
            </if>
            <if test="dirValue != null  and dirValue != ''">
                dirValue = #{dirValue},
            </if>
            <if test="writeStatus != null">
                writeStatus = #{writeStatus},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            lastUpdateTime = #{lastUpdateTime}
        </set>
        where
        id = #{id}
    </update>

    <delete id="deleteById">
        delete from <include refid="tableName"/>
        where id = #{id}
    </delete>

    <delete id="deleteOptionByAblityId">
        delete from t_device_ablity_option
        where ablityId = #{ablityId}
    </delete>

    <select id="selectAblityListByTypeId" resultType="com.huanke.iot.base.po.device.alibity.DeviceAblityPo">
        SELECT
        t_device_ablity.*
        FROM
        t_device_type_ablity_set,
        t_device_ablity_set_relation,
        t_device_ablity
        WHERE
        t_device_type_ablity_set.ablitySetId = t_device_ablity_set_relation.ablitySetId
        AND t_device_ablity.id = t_device_ablity_set_relation.ablityId

        <where>
            <if test = "param.typeId != null ">
                AND t_device_type_ablity_set.typeId = #{param.typeId}
            </if>
        </where>
    </select>
</mapper>