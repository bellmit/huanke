    <select id="selectAblityListByTypeId" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.alibity.DeviceTypeAblitysPo">
        SELECT
        t_device_ablity.ablityName,t_device_type_ablitys.*
        FROM
        t_device_type_ablitys,
        t_device_type,
        t_device_ablity
        WHERE
        t_device_type.id = t_device_type_ablitys.typeId
        AND t_device_ablity.id = t_device_type_ablitys.ablityId
