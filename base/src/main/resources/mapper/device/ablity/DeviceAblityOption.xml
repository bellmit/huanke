<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.ablity.DeviceAblityOptionMapper">

    <sql id="tableName">
        t_device_ablity_option
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.device.alibity.DeviceAblityOptionPo">
        INSERT INTO <include refid="tableName"/>
        (
        optionName,
        ablityId,
        createTime
        )
        VALUES (
        #{optionName},
        #{ablityId},
        #{createTime}
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.alibity.DeviceAblityOptionPo">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.device.alibity.DeviceAblityOptionPo">
        select * from
        <include refid="tableName"/>
        <where>
            1 = 1
            <if test="param.optionName != null and param.optionName != ''">
                AND optionName like CONCAT('%',CONCAT(#{param.optionName},'%'))
            </if>
            <if test="param.ablityId != null">
                AND ablityId = #{param.ablityId}
            </if>
        </where>
        limit #{offset},#{limit}
    </select>

    <update id="updateById" parameterType="com.huanke.iot.base.po.device.alibity.DeviceAblityOptionPo">
        update
        <include refid="tableName"/>
        <set>
            <if test="optionName != null and optionName != ''">
                optionName = #{optionName},
            </if>
            lastUpdateTime = #{lastUpdateTime}
        </set>
        where
        id = #{id}
    </update>

    <delete id="deleteById">
        delete from <include refid="tableName"/>
        where id = #{id}
    </delete>

</mapper>