<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.ablity.DeviceTypeAblitysMapper">

    <sql id="tableName">
        t_device_type_ablitys
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.huanke.iot.base.po.device.alibity.DeviceTypeAblitysPo">
        INSERT INTO <include refid="tableName"/>
        (
        ablityId,
        typeId
        )
        VALUES (
        #{ablityId},
        #{typeId}
        )
    </insert>

    <update id="updateById" parameterType="com.huanke.iot.base.po.device.alibity.DeviceTypeAblitysPo">
        update
        <include refid="tableName"/>
        <set>
            <if test="ablityId != null">
                ablityId = #{ablityId},
            </if>
            <if test="typeId != null ">
                typeId = #{typeId},
            </if>
            lastUpdateTime = #{lastUpdateTime}
        </set>
        where
        id = #{id}
    </update>

    <delete id="deleteById">
        delete from <include refid="tableName"/>
        where id = #{id}
    </delete>
    <delete id="deleteByTypeId">
        delete from <include refid="tableName"/>
        where typeId = #{typeId}
    </delete>

    <delete id="deleteAblityByAbiltyId">
        delete from <include refid="tableName"/>
        where ablityId = #{ablityId}
        and typeId = #{typeId}
    </delete>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.alibity.DeviceTypeAblitysPo">
        select
        *
        FROM
        <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>
    <select id="selectByTypeId" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.alibity.DeviceTypeAblitysPo">
        select
        *
        FROM
        <include refid="tableName"/>

        WHERE typeId = #{typeId}
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.device.alibity.DeviceTypeAblitysPo">
        select * from
        <include refid="tableName"/>
        <where>
            1 = 1
            <if test="param.typeId != null">
                AND typeId = #{param.typeId}
            </if>
            <if test="param.ablityId != null ">
                AND ablityId = #{param.ablityId}
            </if>
        </where>
        limit #{offset},#{limit}
    </select>

</mapper>