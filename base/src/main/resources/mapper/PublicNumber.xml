<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.impl.publicnumber.PublicNumberMapper">
    <sql id="all_columns">
        SELECT <include refid="all_columns"/> FROM
        <include refid="tableName"/>
        WHERE host = #{host}
        *
    </sql>
    <sql id = "tableName">
        t_public_number
    </sql>
    <select id="selectByHost" resultType="com.huanke.iot.base.po.publicnumber.PublicNumberPo" parameterType="java.lang.String">
        <!-- 具体的sql -->
    </select>

    <select id="selectList" resultType="com.huanke.iot.base.po.publicnumber.PublicNumberPo">
        select * from
        <include refid="tableName"/>
        <where>
            1 = 1
        </where>
        limit #{offset},#{limit}
    </select>
    <select id="selectById" resultType="com.huanke.iot.base.po.publicnumber.PublicNumberPo">
    select * from <include refid="tableName"/>
    where id = #{publicId}  limit 1
    </select>
</mapper>